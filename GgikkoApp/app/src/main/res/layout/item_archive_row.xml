<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_swipe_wrapper"
    android:layout_width="match_parent"
    android:padding="1dp"
    android:layout_height="120dp">

    <!-- behind -->
    <RelativeLayout
        android:id="@+id/search_behind_wrapper"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:background="@color/red_D32F2F">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_delete"/>

    </RelativeLayout>

    <!-- surface -->
    <LinearLayout
        android:id="@+id/search_surface_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_item_search_result_thumb"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundColor"
            android:padding="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_gravity="center_vertical"
                android:background="@color/backgroundColor"
                android:gravity="left|top"
                tools:text="title"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/search_height"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/backgroundColor"
                android:gravity="left|center_vertical"
                tools:text="height"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/search_width"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/backgroundColor"
                android:gravity="left|center_vertical"
                tools:text="width"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>